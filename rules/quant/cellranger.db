#-*- mode:snakemake -*-
from os.path import join

# config
CR_EXT = join(EXT_DIR, 'cellranger')
CR_INTERIM = join(INTERIM_DIR, 'cellranger')
CR_CONFIG = config.get('cellranger', {})
CR_BIOTYPES = CR_CONFIG.get('gene_biotypes', [])
_ATTR = ['--attribute=gene_biotype:{} '.format(b) for b in CR_BIOTYPES]
ORG = config.get('organism', 'homo_sapiens')
CR_DOCKER = CR_CONFIG.get('docker', 'docker://gcfntnu/cellranger:3.0.0')
CR_PREBUILD = CR_CONFIG.get('prebuilds', {})

include:
    'ensembl.db'
include:
    'gencode.db'

rule cellranger_mkgtf:
    input:
        gtf = join(EXT_DIR, 'ensembl', 'genes.gtf')
    output:
        gtf = join(EXT_DIR, 'custom_ensembl', 'genes.gtf')
    params:
        attr = ' '.join(_ATTR)
    singularity:
        CR_DOCKER
    shell:
        'cellranger mkgtf '
        '{input.gtf} '
        '{output.gtf} '
        '{params.attr}'

rule cellranger_premirna_gtf:
    input:
        gtf = join(CR_INTERIM, 'ensembl.filtered.gtf')
    output:
        gtf = join(CR_INTERIM, 'ensembl.permirna.gtf')
    shell:
        """
        awk 'BEGIN{{FS="\t"; OFS="\t"}} $3 == "transcript"{{ $3="exon"; print}}' {input.gtf} > {output.gtf}
        """

rule cellranger_single_species_custom_ref:
    input:
        genome = join(EXT_DIR, 'ensembl', 'genome.fa'),
        filtered_gtf = rules.cellranger_mkgtf.output
    params:
        dummy_out = 'ensembl_' + ORG,
        out = join(CR_EXT, 'reference', ORG, 'custom_ensembl')
    output:
        json = join(CR_EXT, 'reference', ORG, 'custom_ensembl', 'reference.json'),
        gtf = join(CR_EXT, 'reference', ORG, 'custom_ensembl', 'genes', 'genes.gtf'),
        fasta = join(CR_EXT, 'reference', ORG, 'custom_ensembl', 'fasta', 'genome.fa'),
        star_index = join(CR_EXT, 'reference', ORG, 'custom_ensembl', 'star', 'SA')
    threads:
        48
    singularity:
        CR_DOCKER
    log:
        'logs/star_ensembl.Log.out'
    shell:
        'cellranger mkref '
        '--genome={params.dummy_out} '
        '--fasta={input.genome} '
        '--genes={input.filtered_gtf} '
        '--nthreads={threads} '
        '&& '
        'mv {params.dummy_out}/* {params.out}/ '
        '&& rmdir {params.dummy_out} '
        '&& mv Log.out {log}'
        
rule cellranger_multi_species_mkref:
    
rule cellranger_prebuilt_reference:
    params:
        url = CR_PREBUILD[ORG],
        out = join(CR_EXT, 'reference', ORG, '10xgenomics')
    output:
        json = join(CR_EXT, 'reference', ORG, '10xgenomics', 'reference.json'),
        gtf = join(CR_EXT, 'reference', ORG, '10xgenomics', 'genes', 'genes.gtf'),
        fasta = join(CR_EXT, 'reference', ORG, '10xgenomics', 'fasta', 'genome.fa'),
        star_index = join(CR_EXT, 'reference', ORG,'10xgenomics', 'star', 'SA')
    shell:
        'curl {params.url} | tar xvz --strip-components=1 -C {params.out}'
    
