#-*- mode:snakemake -*-
"""pySCENIC Single-Cell rEgulatory Network Inference and Clustering
"""
include:
    '../gcfdb/pyscenic.db'

rule scenic_hda5_counts_mtx:
    input:
        join(QUANT_INTERIM, 'aggregate', 'cellranger', 'scanpy', '{id}_aggr.h5ad')
    output:
        join(ANALYSIS_INTERIM, 'scenic', '{id}_counts.mtx') 
    params:
        script = srcdir('scripts/pyscenic_grn_input.py')
    shell:
        'python {params.script} {input} > {output} '


rule scenic_hda5_exprs_mtx:
    input:
        join(QUANT_INTERIM, 'aggregate', 'cellranger', 'scanpy', '{id}_aggr.h5ad')
    output:
        join(ANALYSIS_INTERIM, 'scenic', '{id}_exprs.mtx') 
    params:
        script = srcdir('scripts/pyscenic_grn_input.py')
    shell:
        'python {params.script} --use-norm-exprs {input} > {output} '


rule scenic_grn:
    input:
        mtx = join(ANALYSIS_INTERIM, 'scenic', '{id}_counts.mtx') 
    threads:
        8
    singularity:
        'shub://aertslab/pySCENIC:0.9.9'
    shell:
        'pyscenic grn '
        '-o {output} '
        '--num_workers {threads} '
        '{input} '
